{% extends "admin/layout" %}

{% set updateMode = (collection.id is null or collection.id is empty) %}

{% block header %}
<div class="header-section">
    {% if updateMode %}
    <h1>Nouvelle collection</h1>
    {% set formAction = urlFor('admin.collections.create') %}
    {% else %}
    <h1>Modifier collection</h1>
    {% set formAction = urlFor('admin.collections.update', { 'id': collection.id }) %}
    {% endif %}
</div>
{% endblock %}

{% block content %}
<form method="post" action="{{ formAction }}">
    <input type="hidden" name="id" value="{{ collection.id }}">

    <div class="card card-body">
        <div class="form-group">
            <label for="name">Nom</label>
            {{ formInput("name", collection.name) }}
        </div>

        <div class="text-right">
            <a href="{{ urlFor('admin.collections.index') }}" class="card-link mr-4">Annuler</a>
            <button type="submit" class="btn btn-primary">Enregistrer</button>
        </div>
    </div>
</form>
{% endblock %}