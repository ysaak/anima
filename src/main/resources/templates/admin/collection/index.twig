{% extends "admin/layout" %}

{% block header %}
<div class="header-section">
    <h1>Collections</h1>
</div>
{% endblock %}

{% block content %}
<p class="text-right">
    <a href="{{ urlFor('admin.collections.new') }}" class="btn btn-icon btn-primary"><span class="material-icons">add</span> Nouveau</a>
</p>

<div class="card card-body">
    <table class="table">
        <col>
        <col span="2" width="80">
        <thead class="thead-dark">
            <tr>
                <th>Nom</th>
                <th colspan="2">&nbsp;</th>
            </tr>
        </thead>
        <tbody>
    {% for collection in collectionList %}
            <tr>
                <td>{{ collection.name }}</td>
                <td><a href="{{ urlFor('admin.collections.edit', { 'id': collection.id }) }}">Modifier</a></td>
                <td><a class="text-danger" href="{{ urlFor('admin.collections.delete', { 'id': collection.id }) }}" data-toggle="confirm">Supprimer</a></td>
            </tr>
    {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}