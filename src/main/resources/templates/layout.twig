{% if hasFlashErrorMessage() %}
<div class="alert alert-danger alert-dismissible fade show border-0 m-0 rounded-0" role="alert">
    <ul class="m-0">
    {% for message in getFlashErrorMessage() %}
        <li>{{ message }}</li>
    {% endfor %}
    </ul>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{% endif %}

{% if hasFlashInfoMessage() %}
<div class="alert alert-success alert-dismissible fade show border-0 m-0 rounded-0" role="alert">
    <ul class="m-0">
        {% for message in getFlashInfoMessage() %}
        <li>{{ message }}</li>
        {% endfor %}
    </ul>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{% endif %}

<div class="d-flex flex-grow-1">
    {% block sidebar %}{% endblock %}

    <main role="main" class="flex-grow-1 container-fluid main">
        {% block content %}{% endblock %}
    </main>
</div>

<script src="{{ asset('vendor/jquery.min.js') }}"></script>
<script src="{{ asset('vendor/popper.min.js') }}"></script>
