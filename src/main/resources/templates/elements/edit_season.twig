{% if season.id is null or season.id is empty %}
<form method="post" action="{{ urlFor('elements.seasons.create', {'elementId': season.elementId }) }}">
{% else %}
<form method="post" action="{{ urlFor('elements.seasons.update', {'elementId': season.elementId, 'seasonId': season.id}) }}">
{% endif %}
    <input type="hidden" name="elementId" value="{{ season.elementId }}">
    <input type="hidden" name="id" value="{{ season.id }}">
    <div class="modal-header">
        {% if season.id is null or season.id is empty %}
        <h5>Nouvelle saison</h5>
        {% else %}
        <h5>Modifier saison</h5>
        {% endif %}
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label for="title">Titre</label>
            <input type="text" class="form-control" id="title" name="title" value="{{ season.title }}">
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Enregistrer</button>
        <button type="button" class="btn btn-link" data-dismiss="modal">Fermer</button>
    </div>
</form>
