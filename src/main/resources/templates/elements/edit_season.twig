<form method="post" action="/elements/{{ episode.elementId }}/episodes/{{ episode.id }}">
    <input type="hidden" name="elementId" value="{{ episode.elementId }}">
    <input type="hidden" name="id" value="{{ episode.id }}">
    <div class="modal-header">
        {% if episode.id is null or episode.id is empty %}
        <h5>Nouvel &eacute;pisode</h5>
        {% else %}
        <h5>Modifier &eacute;pisode</h5>
        {% endif %}
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label for="seasonId">Saison</label>
            {{ formSelect("seasonId", seasonList, episode.seasonId) }}
        </div>
        <div class="form-group">
            <label for="number">Num&eacute;ro</label>
            <input type="text" class="form-control" id="number" name="number" value="{{ episode.number }}">
        </div>
        <div class="form-group">
            <label for="title">Titre</label>
            <input type="text" class="form-control" id="title" name="title" value="{{ episode.title }}">
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Enregistrer</button>
        <button type="button" class="btn btn-link" data-dismiss="modal">Fermer</button>
    </div>
</form>
