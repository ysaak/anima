<form method="post" action="{{ urlFor('elements.remote-ids.create', {'elementId': elementId }) }}">
    <input type="hidden" name="elementId" value="{{ elementId }}" />
    <div class="modal-header">
        <h5>Nouvelle relation</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label for="externalSiteId">Site externe</label>
            {{ formSelect("externalSiteId", siteList, null) }}
        </div>
        <div class="form-group">
            <label for="remoteId">Identifiant</label>
            {{ formInput("remoteId", null) }}
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Enregistrer</button>
        <button type="button" class="btn btn-link" data-dismiss="modal">Fermer</button>
    </div>
</form>